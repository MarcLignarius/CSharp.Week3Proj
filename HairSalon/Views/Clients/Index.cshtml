@using HairSalon.Models;
<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8'>
  <title>Chez Marc Hair Salon</title>
  <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
  <link rel='stylesheet' href='~/css/styles.css' type="text/css">
</head>
<body>
  <div class="container">
    <div class="jumbotron">
      <h1>Chez Marc Hair Salon</h1>
    </div>
    <p>Click on a client to see contact details:</p>
    @if (Model.Count == 0)
    {
      <p>You have no clients at this time!</p>
    }
    @if(Model.Count != 0)
    {
      @foreach (Client client in Model)
      {
          <a href="/clients/@client.GetId()" class="btn btn-dark">@client.GetFirstName() @client.GetLastName()</a>
          <br>
      }
    }
    <div id="space">
    <div>
    <hr>
    <a href="/clients/new" class="btn btn-dark">Add a new client</a>
    <form action="/clients/delete" method="post">
      <button type="submit" name="button" class="btn btn-dark">Clear client list</button>
    </form>
    <a href="/" class="btn btn-dark">Home</a>
  </div>
</body>
</html>
