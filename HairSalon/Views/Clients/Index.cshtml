@using HairSalon.Models;
<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8'>
  <title>Chez Marc Hair Salon</title>
  <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
  <link rel='stylesheet' href='~/css/styles.css' type="text/css">
</head>
<body>
  <div class="container">
    <div class="jumbotron">
      <h1>Chez Marc Hair Salon</h1>
    </div>
    @if (Model.Count == 0)
    {
      <p>You have no clients at this time!</p>
    }
    @if(Model.Count != 0)
    {
      @foreach (Client client in Model)
      {
        <ul>
          <li>First Name: @client.GetFirstName()</li>
          <li>Last Name: @client.GetLastName()</li>
          <li>Phone Number: @client.GetPhoneNumber()</li>
          <li>Email Address: @client.GetEmailAddress()</li>
        </ul>
        <br>
      }
    }
    <a href="/clients/new" class="btn btn-dark">Add a new client</a>
    <a href="/" class="btn btn-dark">Home</a>
  </div>
</body>
</html>
